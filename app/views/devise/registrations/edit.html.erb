<div class="content">
  <div class="pure-g">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put,:multipart => true, :class=>"pure-form-stacked"}) do |f| %>
    <div class="pure-u-1-2">

      <%= devise_error_messages! %>
      <fieldset>
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
        <%= f.label :phonenumber %>
        <%= f.telephone_field :phonenumber, autofocus: true %>
        <%= f.label :province %>
        <%= f.text_field :province, autofocus: true %>
        <%= f.label :city %>
        <%= f.text_field :city, autofocus: true %>
        <%= f.label :area %>
        <%= f.text_field :area, autofocus: true %>

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <%= f.label :password %>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "off" %>
        <%= f.submit "修改", :class => 'sign-button' %>
      </fieldset>
    </div>
    <div class="pure-u-1-2">
      <fieldset>>
      <%= image_tag @user.avatar.url, :class => 'pure-img' %>
      <%= f.file_field :avatar %>
      </fieldset
    </div>
    <% end %>
  </div>
</div>
<%= link_to "取消", :back, :class => 'pure-menu-link' %>