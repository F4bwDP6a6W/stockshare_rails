<h1>New Stock</h1>
<%= form_for :stock, url:stocks_path do |f| %>

    <p>
      <%= f.label :stockNumber %><br>
      <%= f.text_field :stockNumber %>
    </p>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', stocks_path %>